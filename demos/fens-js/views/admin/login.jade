extends ./../layout

block content
	div.container.col-md-6.col-md-offset-3
		form.form-horizontal(action='')
			div.login-tip.hidden.form-group

			fieldset
				div.form-group
					legend 用户登录
				div.form-group
					label.control-label(for='username') 用户名
					div
						input.form-control.input-xlarge#username(name='username')

				div.form-group
					label.control-label(for='password') 密码
					div
						input(type='password', name='password')#password.input-xlarge.form-control

				div.form-group
					button.btn.btn-primary#submit 登录

block append scripts
	script(src='../javascripts/admin/login.js')