extends layout

block content
	div.container
		form.col-md-6.col-md-offset-3
			fieldset
				legend 用户登录
				div.form-group
					label.control-label(for='username') 用户名
					input.form-control.input-xlarge#username(name='username')

				div.form-group
					label.control-label(for='password') 密码
					input(type='password', name='password')#password.input-xlarge.form-control

				div.form-group
					button.btn.btn-primary#submit 登录

block append scripts
	script(src='/javascripts/index/login.js')